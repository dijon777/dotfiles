# vim: set ft=sh
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

alias ...="cd ../.."

alias g='git'
alias pwbt='echo "cxP97Bt" | pbcopy'
alias pwha='echo "pbv2eetmb2" | pbcopy'

alias gcver='git commit -m "バージョン変更"'

alias tmux='tmux -u'
alias t='tmux'

if [ -f /Applications/MacVim.app/Contents/MacOS/Vim ]; then
  alias vi='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
  alias vim='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
fi

alias say='say -v Samantha' # 日本語は -v Kyoko
alias psay='pbpaste | say -v Samantha'

alias lsapp="ps aux | grep -v grep | grep Applications | grep -o -e 'MacOS\/.*' | awk '{print \$1}' | sed -e 's/MacOS\///'"
